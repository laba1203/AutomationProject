<suite name="All Test In Parallel" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="util.Listeners"/>
    </listeners>


    <test name="Smoke Test" preserve-order="true" >
        <classes>
            <class name="execution.smoke.SmokeTest_v2"/>
        </classes>
    </test>
    <test name="Simple Test" preserve-order="true" >
        <classes>
            <class name="execution.integration.custom.CustomIntegrationTestForAllCampaignTypes"/>
        </classes>
    </test>
    <test name="Multi-campaign editor" preserve-order="true" group-by-instances="true">
        <classes>
            <class name="execution.editor.mce.MceTests_ShortVersion"/>
        </classes>
    </test>
    <test name="Simple Editor" preserve-order="true" >
        <classes>
            <class name="execution.editor.SimpleEditorTesting_v2"/>
        </classes>
    </test>
    <test name="HTML Editor tests" preserve-order="true" >
        <classes>
            <class name="execution.editor.HtmlEditorTesting"/>
        </classes>
    </test>
    <test name="Shopify Integration" preserve-order="true" >
        <classes>
            <class name="execution.integration.shopify.ShopifyIntegrationTest"/>
        </classes>
    </test>
    <test name="Fraud Settings tests" preserve-order="true" >
        <classes>
            <class name="execution.fraud.settings.FraudSettingsTesting"/>
        </classes>
    </test>
    <test name="Campaign Actions" preserve-order="true" >
        <classes>
            <class name="execution.campaign.actions.CampaignActionsTesting"/>
        </classes>
    </test>
    <test name="New user registration. Positive case" preserve-order="true" >
        <classes>
            <class name="execution.registration.CreateNewUserWithSite"/>
        </classes>
    </test>
    <test name="Site Settings Basic Tab tests" preserve-order="true" >
        <classes>
            <class name="execution.site.settings.SiteSettingsBasicTab"/>

        </classes>
    </test>
    <test name="Site Settings Contacts Tab" preserve-order="true" >
        <classes>
            <class name="execution.site.settings.SiteSettingsContactsTab"/>
        </classes>
    </test>
    <test name="Non PII access to sites" preserve-order="true" >
        <classes>
            <class name="execution.access.management.NonPiiAccessRequestTesting"/>
        </classes>
    </test>
    <test name="PII access to sites" preserve-order="true" >
        <classes>
            <class name="execution.access.management.PiiAccessRequestTesting"/>
        </classes>
    </test>
    <test name="Previous Customer Report" preserve-order="true" >
        <classes>
            <class name="execution.reports.previous.customer.upload.PreviousCustomerUploadTesting_v2"/>
        </classes>
    </test>
    <test name="Coupon Codes List Report" preserve-order="true" >
        <classes>
            <class name="execution.reports.coupon.codes.upload.UploadCouponCodesTests"/>
        </classes>
    </test>

</suite>


